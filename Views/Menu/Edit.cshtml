@model Cucina_De_Corazon.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="max-width:500px; width:100%;">
        <h3 class="text-center mb-4 fw-bold">Edit Product</h3>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="ProductId" />

            <div class="mb-3">
                <label class="form-label fw-semibold">Name</label>
                <input asp-for="ProductName" class="form-control rounded-2" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Description</label>a
                <textarea asp-for="ProductDescription" class="form-control rounded-2" rows="3" required></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Price</label>
                <div class="d-flex gap-2">
                    <input type="number" step="1" min="0" name="MinPrice" class="form-control rounded-2" placeholder="0.00 (5 pax)" value="@ViewBag.MinPrice" required />
                    <span class="align-self-center fw-bold">-</span>
                    <input type="number" step="1" min="0" name="MaxPrice" class="form-control rounded-2" placeholder="0.00 (10 pax)" value="@ViewBag.MaxPrice" required />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Category</label>
                <select asp-for="CategoryId" class="form-select rounded-2" asp-items="ViewBag.Categories" required>
                    <option value="">Select Category</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Picture (optional)</label>
                <input asp-for="ProductPicture" class="form-control rounded-2" />
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-warning text-white fw-bold" style="background: #f57c1f;">Update</button>
            </div>
        </form>
    </div>
</div>
