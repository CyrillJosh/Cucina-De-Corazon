@model List<Cucina_De_Corazon.Models.Feedback>

@{
    ViewData["Title"] = "Feedbacks";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">Customer Feedback</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center rounded-3">
            No feedbacks have been submitted yet.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded-3">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-warning">
                    <tr class="text-center">
                        <th style="width: 70%;">Message</th>
                        <th style="width: 30%;">Date Submitted</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var feedback in Model)
                    {
                        <tr>
                            <td class="text-break">@feedback.Message</td>
                            <td class="text-center">
                                @feedback.SubmittedAt.ToString("MMMM dd, yyyy hh:mm tt")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
