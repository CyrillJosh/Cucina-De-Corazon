@{
    ViewData["Title"] = "Home Page";
}
@model List<Category>
<div class="row h-100">
    <div class="col-md-7">
        <h1 class="display-4 text-center">Welcome to Cucina De Corazon!</h1>
        <h2 class="text-center mt-4 mb-3"><b>One of the best food catering and events services in the Philippines</b></h2>
        <p class="text-center">Excellent cuisine and catering services tailored to your budget and needs.</p>
    </div>
    <div class="col-md-5 d-flex align-items-bottom justify-content-center">
        <img src="~/images/CATERINGFOOD.jpg" alt="" class="img-fluid rounded shadow" style="max-height:400px;">
    </div>
    <div class="text-left-center mt-4">
        <!-- Trigger floating menu -->
        <button class="btn btn-lg" onclick="toggleFloatingMenu()"
                data-bs-toggle="modal" data-bs-target="#Category"
                style="background-color: #f57c1f; color: #fff; font-weight: bold;
               box-shadow: 2px 4px 8px rgba(0,0,0,0.15); border-radius: 6px; padding: 12px 36px;">
            OUR FOOD MENU
        </button>
    </div>
</div>


<!-- Floating Menu -->
<div class="modal fade" id="Category" aria-labelledby="CategoryModal" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-3">
            <div class="modal-header">
                <h3 class="modal-title">Cucina De Corazon Menu</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex flex-column gap-2">
                @foreach (var c in Model)
                {
                    <a class="text-decoration-none text-center" 
                        style="background: #f57c1f;
                                color: #fff;
                                font-weight: bold;
                                padding: 10px 20px;
                                border-radius: 6px;
                                text-decoration: none;
                                transition: all 0.3s ease;" 
                        asp-controller="Menu" 
                        asp-action="Products" 
                        asp-route-category="@c.CategoryId" class="menu-link">
                        @c.CategoryName
                    </a>
                }
            </div>
            <div class="modal-footer">
                <a href="/Cart" class="btn btn-danger w-100">Go to Cart</a>
            </div>
        </div>
    </div>
</div>


