@{
    ViewData["Title"] = "Event Calendar";
}

<style>
    body {
        background-color: #ffffff;
        color: #333333;
    }

    .fc {
        background-color: #ffffff;
        border-radius: 15px;
        padding: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
    }

    .fc-toolbar-title {
        color: #EB6A00;
        font-weight: 700;
    }

    .fc-button-primary {
        background-color: #EB6A00 !important;
        border: none !important;
        color: #000 !important;
        font-weight: 600;
        transition: all 0.2s ease-in-out;
    }

        /* .fc-button-primary:hover {
            background-color: #e0ae32 !important;
        } */

    .fc-daygrid-day-number{
            color:  #EB6A00
    }
    .fc-col-header-cell-cushion {
        color: white;
        font-weight: 500;
    }
/* 
    .fc-daygrid-day:hover {
        background-color: rgba(246, 194, 62, 0.15);
        cursor: pointer;
    } */

    .fc-day-today {
        background-color: #EB6A00 !important;
        border: 1px solid #EB6A00 !important;
    }
    .fc-day-today .fc-daygrid-day-number {
        color: #fff !important;
    }

    .fc-event {
        background-color: #EB6A00 !important;
        border: none !important;
        color: #000 !important;
        font-weight: 600;
    }

    thead{
        background: #EB6A00 !important;
        margin-top: -20px;
    }

    .fc-event-title-container{
            text-align: center;
            color: white;
    }
        /* Make past days look faded */
    .fc-daygrid-day.fc-day-past {
        background-color: #e8e8e8 !important; /* slightly different background */
    }

    .fc-daygrid-day.fc-day-other .fc-daygrid-day-number {
        color: #999 !important; /* muted gray number */
        font-weight: 500;
    }
</style>

<div class="container mt-5">
    <h2 class="text-center fw-bold text-warning mb-4 text-orange">Event Calendar</h2>
    <div id="calendar" style="max-height: 60vh; overflow-y: auto;"></div>
</div>

@section Scripts {
    <script>
               document.addEventListener('DOMContentLoaded', function () {
            const calendarEl = document.getElementById('calendar');
            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                height: 'auto',
                events: '/Event/GetEvents',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: ''
                },
                eventDisplay: 'block',
                eventColor: '#EB6A00',
                eventTextColor: '#000',
                eventClick: function (info) {
                    const orderId = info.event.id;
                    if (orderId) {
                        window.location.href = `/Records/Details/${orderId}`; // or /Orders/Details/
                    }
                }
            });

            calendar.render();
        });
    </script>
}
