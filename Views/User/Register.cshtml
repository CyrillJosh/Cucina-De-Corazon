@{
    ViewData["Title"] = "Register";
}

<div class="container h-100 w-100 overflow-y-auto">
    <div class="h-100 w-100 d-flex justify-content-center align-items-center">
        <div class="col-md-5">
            <div class="card shadow-sm rounded-3 bg-orange">
                <div class="card-body p-4" style="max-height: 70vh; overflow-y: auto;">
                    <h3 class="card-title text-center mb-4 fw-bold text-white">Register</h3>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger rounded-3">@ViewBag.Error</div>
                    }

                    <form method="post" asp-action="Register">
                        <div class="mb-3">
                            <label for="fullName" class="form-label fw-semibold text-white">Full Name</label>
                            <input type="text" name="fullName" class="form-control rounded-2 shadow" id="fullName" placeholder="Enter full name" required />
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label fw-semibold text-white">Email</label>
                            <input type="email" name="email" class="form-control rounded-2 shadow" id="email" placeholder="Enter email" required />
                        </div>
                        <div class="mb-3">
                            <label for="number" class="form-label fw-semibold text-white">Contact Number</label>
                            <input type="text" name="number" class="form-control rounded-2 shadow" id="number" placeholder="Enter Contact Number" required />
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label fw-semibold text-white">Username</label>
                            <input type="text" name="username" class="form-control rounded-2 shadow" id="username" placeholder="Choose a username" required />
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label fw-semibold text-white">Password</label>
                            <input type="password" name="password" class="form-control rounded-2 shadow" id="password" placeholder="Enter password" required />
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn text-orange fw-bold bg-white px-5">
                                Login
                            </button>
                        </div>
                    </form>

                    <p class="mt-3 text-center">
                        Already have an account? <a asp-action="Login" class="text-white" style="color:#f57c1f;">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
