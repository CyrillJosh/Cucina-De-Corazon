@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5 h-100">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm rounded-3">
                <div class="card-body p-4">
                    <h3 class="card-title text-center mb-4 fw-bold" style="color:#f57c1f;">Register</h3>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger rounded-3">@ViewBag.Error</div>
                    }

                    <form method="post" asp-action="Register">
                        <div class="mb-3">
                            <label for="fullName" class="form-label fw-semibold">Full Name</label>
                            <input type="text" name="fullName" class="form-control rounded-2" id="fullName" placeholder="Enter full name" required />
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label fw-semibold">Email</label>
                            <input type="email" name="email" class="form-control rounded-2" id="email" placeholder="Enter email" required />
                        </div>
                        <div class="mb-3">
                            <label for="number" class="form-label fw-semibold">Contact Number</label>
                            <input type="text" name="number" class="form-control rounded-2" id="email" placeholder="Enter Contact Number" required />
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label fw-semibold">Username</label>
                            <input type="text" name="username" class="form-control rounded-2" id="username" placeholder="Choose a username" required />
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label fw-semibold">Password</label>
                            <input type="password" name="password" class="form-control rounded-2" id="password" placeholder="Enter password" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit"
                                    class="btn fw-bold text-white rounded-2"
                                    style="background-color:#f57c1f; padding:10px 20px;">
                                Register
                            </button>
                        </div>
                    </form>

                    <p class="mt-3 text-center">
                        Already have an account? <a asp-action="Login" class="fw-bold" style="color:#f57c1f;">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
